<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../java/com/ldtteam/blockout/blockOut.xsd"
        pause="false" lightbox="true">
    <label size="100% 11" pos="0 25" textalign="TOP_MIDDLE" color="white"
           label="$(com.ldtteam.structurize.gui.scan.replace.title)"/>
    <input id="name" size="150 18" pos="135 40" maxlength="25"/>

    <itemicon id="resourceIconFrom" size="17 17" pos="0 1"/>
    <label id="resourceNameFrom" size="140 12" pos="30 4" color="white"/>

    <label id="to" label="->" size="140 12" pos="170 4" color="white"/>

    <itemicon id="resourceIconTo" size="17 17" pos="210 1"/>
    <label id="resourceNameTo" size="140 12" pos="240 4" color="white"/>


    <list id="resources" size="250 120" pos="40 65">
        <box size="100% 18" linewidth="2">
            <itemicon id="resourceIcon" size="16 16" pos="1 1"/>
            <label id="resourceName" size="135 18" pos="20 0" color="white" wrap="true"/>
            <buttonimage label="$(com.ldtteam.structurize.gui.scanTool.select)" id="select" pos="160 1" size="86 17"
                         source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>
        </box>
    </list>

    <buttonimage label="$(com.ldtteam.structurize.gui.placeholder.addtag)" id="addTag" pos="300 35" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <label id="taglistname" size="30 12" pos="300 50" color="white"/>

    <list id="nbttags" size="130 120" pos="300 65">
        <box size="100% 17" linewidth="2">
            <label id="tagname" size="80 12" pos="5 3" color="white"/>
            <buttonimage id="removeTag" pos="105 1" size="15 15" source="structurize:textures/gui/builderhut/button_x.png" textcolor="black"/>
        </box>
    </list>

    <buttonimage id="done" source="structurize:textures/gui/buildtool/confirm.png" size="32" pos="125 185"/>
    <buttonimage id="cancel" source="structurize:textures/gui/buildtool/cancel.png" size="32" pos="215 185"/>
</window>
