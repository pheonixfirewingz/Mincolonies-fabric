<window xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../java/com/ldtteam/blockout/blockOut.xsd"
        size="420 240" pause="false" lightbox="false">

    <buttonimage label="$(com.ldtteam.structurize.gui.shapetool.pickmainblock)" id="pickMainBlock" pos="24 3" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <itemicon id="resourceIconMain" item="minecraft:gold_block" size="17 17" pos="59 20"/>


    <buttonimage label="$(com.ldtteam.structurize.gui.shapetool.pickfillblock)" id="pickFillBlock" pos="24 43" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <itemicon id="resourceIconFill" item="minecraft:gold_block" size="17 17" pos="59 60"/>

    <toggle id="hollowShape" options="$(com.ldtteam.structurize.gui.shapetool.solid)|$.hollow" pos="24 83" size="86 17"
                 source="structurize:textures/gui/builderhut/builder_button_medium.png" textcolor="black"/>

    <buttonimage id="previousShape" size="14 15" pos="130 3" label="&lt;"
                 source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>
    <dropdown id="style" size="129 17" pos="145 3" maxContentHeight="75" dropDownSize="140 75" source="structurize:textures/gui/builderhut/builder_button_medium_large.png" textcolor="black">
        <view size="100% 15">
            <label id="id" size="100% 100%" label="" pos="0 0"/>
            <button id="button" size="100% 100%" label="" pos="0 0"/>
        </view>
    </dropdown>
    <buttonimage id="nextShape" size="14 15" pos="275 3" label="&gt;"
            source="structurize:textures/gui/builderhut/builder_button_mini.png" textcolor="black"/>

    <label label="Height" id="heightLabel" size="40 20" pos="310 1"/>
    <label label="Width" id="widthLabel" size="40 20" pos="310 26"/>
    <label label="Length" id="lengthLabel" size="40 20" pos="310 51"/>
    <label label="Frequency" id="frequencyLabel" size="40 20" pos="310 76"/>
    <label label="Shape" id="shapeLabel" size="40 20" pos="120 30"/>

    <input id="height" size="30 20" pos="355 1" maxlength="3"/>
    <input id="width" size="30 20" pos="355 26" maxlength="3"/>
    <input id="length" size="30 20" pos="355 51" maxlength="3"/>
    <input id="frequency" size="30 20" pos="355 76" maxlength="3"/>
    <input id="shape" size="135 20" pos="165 30" maxlength="200"/>

    <view size="96 128" pos="162 80">
        <buttonimage id="rotateLeft" source="structurize:textures/gui/buildtool/rotateleft.png" size="32" pos="0 0"/>
        <buttonimage id="up" source="structurize:textures/gui/buildtool/up.png" size="32" pos="32 0"/>
        <buttonimage id="rotateRight" source="structurize:textures/gui/buildtool/rotateright.png" size="32" pos="64 0"/>
        <buttonimage id="left" source="structurize:textures/gui/buildtool/left.png" size="32" pos="0 32"/>
        <buttonimage id="mirror" source="structurize:textures/gui/buildtool/mirror.png" size="32" pos="32 32"/>
        <buttonimage id="right" source="structurize:textures/gui/buildtool/right.png" size="32" pos="64 32"/>
        <buttonimage id="minus" source="structurize:textures/gui/buildtool/minus.png" size="32" pos="0 64"/>
        <buttonimage id="down" source="structurize:textures/gui/buildtool/down.png" size="32" pos="32 64"/>
        <buttonimage id="plus" source="structurize:textures/gui/buildtool/plus.png" size="32" pos="64 64"/>
        <buttonimage id="confirm" source="structurize:textures/gui/buildtool/confirm.png" size="32" pos="0 96"/>
        <buttonimage id="cancel" source="structurize:textures/gui/buildtool/cancel.png" size="32" pos="64 96"/>
    </view>

    <button id="undo" source="structurize:textures/gui/buildtool/rotateleft.png" visible="false" size="32 32" pos="350 208" textcolor="Black" texthovercolor="White"/>
</window>
